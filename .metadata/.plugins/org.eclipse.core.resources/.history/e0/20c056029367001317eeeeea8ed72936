package SampleAccesser;

//アクセス修飾子の勉強
public class Documents {
	//自ファイル＆他ファイルのどこかれでも
	//どこからでもアクセスを許したい場合に定義
	public int    a = 0;
	//他ファイルの他クラスはダメ
	//サブクラスでも使いたいときに定義
	protected int b = 1;
	//他ファイルはダメ
	//後に説明する機会があると思う（よ！）
	int           c = 2;
	//自ファイルの自クラスのみ
	//自分自身（ここではDocumentsクラス内を指す）以外では使えない
	private int   d = 3;
	
}

//こいつは自ファイルの他クラスにあたる
class AccessTest1 {
	public void access() {
		Documents doc = new Documents();
		doc.a = 13;
		doc.b = 12;
		doc.c = 11;
		//怒られる
		//doc.d = 10;
	}
}